<p id="notice"><%= notice %></p>

<h1>Contacts</h1>

<table class="table table-striped">
  <% if @contacts.blank? %>
    <td>There is no contact here yet</td>
  <% else %>
    <thead>
      <tr>
        <th>Name</th>
        <th>Birth date</th>
        <th>Phone</th>
        <th>Address</th>
        <th>Credit card</th>
        <th>Franchise</th>
        <th>Email</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @contacts.each do |contact| %>
        <tr>
          <td><%= contact.name %></td>
          <td><%= contact.birth_date %></td>
          <td><%= contact.phone %></td>
          <td><%= contact.address %></td>
          <td><%= contact.credit_card %></td>
          <td><%= contact.franchise %></td>
          <td><%= contact.email %></td>
          <td><%= contact.user_id %></td>
          <td><%= link_to 'Show', contact, class: 'btn btn-sm btn-primary' %></td>
          <td><%= link_to 'Edit', edit_contact_path(contact), class: 'btn btn-sm btn-secondary' %></td>
          <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>

<br>

<div class="d-flex justify-content-between">
  <%= link_to 'New Contact', new_contact_path, class: 'btn btn-sm btn-primary' %>
  <%= link_to 'Upload CSV file', '#upload-file', class: 'btn btn-sm btn-primary',  'data-toggle': "modal", 'data-target': "#upload-file" %>
</div>

<%= render 'contacts/partials/upload_file' %>